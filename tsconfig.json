{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
		"baseUrl": ".",
			"paths": {
				"components/*": ["src/components/*"],
				"styles/*": ["src/styles/*"],
				"context/*": ["src/context/*"],
				"hooks/*": ["src/hooks/*"],
				"types/*": ["src/types/*"],
				"lib/*": ["src/lib/*"],
				"utils/*": ["src/utils/*"],
			}
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "graphql/queries.query"],
  "exclude": ["node_modules"]
}
